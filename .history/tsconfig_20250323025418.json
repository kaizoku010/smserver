{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "routes/**/*",
    "middleware/**/*",
    "models/**/*",
    "config/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
